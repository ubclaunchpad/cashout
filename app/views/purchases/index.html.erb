<p id="notice"><%= notice %></p>

<h1>Purchases</h1>

<table>
    <thead>
        <tr>
            <th>From currency</th>
            <th>To currency</th>
            <th>Amount spent</th>
            <th>Amount bought</th>
            <th>Exch rate</th>
            <th>Time of purchase</th>
            <th>User</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @purchases.each do |purchase| %>
        <tr>
            <td><%= purchase.from_currency %></td>
            <td><%= purchase.to_currency %></td>
            <td><%= purchase.amount_spent %></td>
            <td><%= purchase.amount_bought %></td>
            <td><%= purchase.exch_rate %></td>
            <td><%= purchase.time_of_purchase %></td>
            <td><%= purchase.user %></td>
            <td><%= link_to 'Show', purchase %></td>
            <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
            <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

