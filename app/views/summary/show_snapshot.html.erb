<%= link_to 'Portfolio', portfolio_path, :class => "btn btn-default" %>
<%= link_to 'Records', snapshot_path, :class => "btn btn-default" %>


<h1>Snapshot</h1>

<table class="table">
    <thead>
        <tr>
            <th>Currency</th>
            <th>Value</th>
            <th colspan=3></th>
        </tr>
    </thead>

    <tbody>
        <% @snapshot_data.each do |currency, value| %>
        <tr>
            <td><%= currency %></td>
            <td><%= value.round(2) %></td>
        </tr>
        <% end %>
    </tbody>
</table>
